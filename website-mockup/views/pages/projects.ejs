<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/style/style.css">
</head>
<body>
  <%- include("../partials/header") %>

  <h1>ðŸ§± Projects</h1>

  <div class="projects-container">
    <% if (!projects || projects.length === 0) { %>
      <p>No projects yet.</p>
    <% } else { %>
      <% projects.forEach(project => { %>
        <div class="project-card">
          <img src="/uploads/projects/<%= project.thumbnail %>" alt="<%= project.title %>">
          <h2><%= project.title %></h2>
          <a href="/pages/projects/<%= project.slug %>">View Details</a>
        </div>
      <% }) %>
    <% } %>
  </div>

  <%- include("../partials/footer") %>
</body>
</html>
