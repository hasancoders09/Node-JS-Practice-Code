<!DOCTYPE html>
<html>
<head>
  <title><%= title || "Blog Posts" %></title>
  <link rel="stylesheet" href="/style/style.css">
</head>
<body>
  <%- include("../partials/header") %>

  <h1>ðŸ“° Blog Posts</h1>
<div class="container">
    <div class="post-list">
  <% if (!posts || posts.length === 0) { %>
    <p>No posts yet.</p>
  <% } else { %>
    <% posts.forEach(post => { %>
      <article>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <small>By <%= post.author || "Admin" %></small>
      </article>
    <% }) %>
  <% } %>
    </div>
</div>
  <%- include("../partials/footer") %>
</body>
</html>
